<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/default_color">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/welcome_viewpage"
        />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/welcome_indicator"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:outlineAmbientShadowColor="@color/default_color"
        android:outlineSpotShadowColor="@color/default_color"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>